{
  "name": "favioli-website",
  "version": "0.0.1",
  "author": "Ben Pevsner",
  "license": "Unlicense",
  "homepage": "https://favioli.com",
  "description": "Emoji Favicons for the web",
  "repository": "https://github.com/ivebencrazy/favioli",
  "main": "build/index.js",
  "scripts": {
    "deploy": "CI=true npm run build",
    "start": "npm-run-all build watch",
    "postbuild": "cp ./build/index.html ./build/404.html",
    "prebuild": "mkdir -p ./build",
    "build": "npm-run-all -p build:*",
    "build:assets": "cp -r ./assets ./build/assets",
    "build:markup": "pug ./source --out ./build",
    "build:styles": "stylus ./source -o ./build",
    "serve": "static -p 3000 ./build",
    "watch": "npm-run-all -p watch:* serve",
    "watch:markup": "npm run build:markup -- --watch",
    "watch:styles": "npm run build:styles -- --watch"
  },
  "devDependencies": {
    "node-static": "^0.7.10",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
