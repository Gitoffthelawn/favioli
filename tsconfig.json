{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "dist",
    "src/constants",
    "**/*.test.js",
    "**/*.test.jsx"
  ],
  "include": [
    "./globals.d.ts"
  ]
}
