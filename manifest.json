{
  "manifest_version": 2,
  "name": "Favioli",
  "description": "Emoji favicons for the web",
  "version": "0.3.4",
  "background": {
    "scripts": [ "build/background.js" ]
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "build/contentScript.js" ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "build/options.html",
    "browser_style": false
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "applications": {
    "gecko": {
      "id": "favioli@bpev.me"
    }
  }
}
